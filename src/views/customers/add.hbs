<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Información de Cliente</h3>
                    </div>
                    <div class="card-body">
                        <form id="quickForm" action="/customers/add" method="POST">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label>Identificación</label>
                                                <input type="text" name="identification" class="form-control"
                                                    placeholder="Ingrese la identificación" autofocus>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label>Nombres</label>
                                                <input type="text" name="names" class="form-control"
                                                    placeholder="Ingrese los nombres">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label>Apellidos (opcional)</label>
                                                <input type="text" name="lastnamesCustomer" class="form-control"
                                                    placeholder="Ingrese los apellidos">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label>Dirección</label>
                                                <input type="text" name="address" class="form-control"
                                                    placeholder="Ciudad, barrio o parroquia, calle, avenida">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label>Correo electrónico (opcional)</label>
                                                <input type="email" name="emailCustomer" class="form-control"
                                                    placeholder="Ingrese el correo electrónico">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label for="contact">Contacto</label>
                                                <input type="text" name="contact" class="form-control"
                                                    placeholder="Ingrese el contacto">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary">
                            <i class="nav-icon fas fa-save"></i>
                            Guardar Cliente
                        </button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>