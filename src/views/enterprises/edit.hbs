<link rel="stylesheet" href="/css/imgPreview.css">
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Información de Empresa</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        {{#with updateEnterprise}}
                        <form id="quickForm" action="/enterprises/edit/{{id}}" method="POST"
                            enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Logo (opcional)</label>
                                        <div class="form-group">
                                            <div class="custom-file">
                                                <input type="file" name="image" class="custom-file-input"
                                                    id="customFile" accept="image/*">
                                                <label class="custom-file-label" for="customFile">Seleccionar
                                                    imagen</label>
                                            </div>
                                        </div>
                                        <div class="img-fluid text-center">
                                            <img id="imgPreview" src="/uploads/profile/enterprises/{{logo}}" alt=""
                                                class="img-fluid">
                                            <script src="/js/conf/imgPreview.js"></script>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-9">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label>Identificación</label>
                                                <input type="text" name="identification" class="form-control"
                                                    placeholder="Ingrese la identificación" value="{{identification}}"
                                                    autofocus>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label>Nombre</label>
                                                <input type="text" name="name" class="form-control"
                                                    placeholder="Ingrese el nombre" value="{{name}}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label>Dirección</label>
                                                <input type="text" name="address" class="form-control"
                                                    placeholder="Ciudad, barrio o parroquia, calle, avenida"
                                                    value="{{address}}">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label>Correo electrónico</label>
                                                <input type="email" name="email" class="form-control"
                                                    placeholder="Ingrese el correo electrónico" value="{{email}}">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label for="contact">Contacto</label>
                                                <input type="text" name="contact" class="form-control"
                                                    placeholder="Ingrese el contacto" value="{{contact}}">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/with}}
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary">
                            <i class="nav-icon fas fa-sync"></i>
                            Guardar Cambios
                        </button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>