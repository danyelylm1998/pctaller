
    <div class="row">
        <div class="mx-auto">
            <div class="card card-outline card-primary">
                <div class="card-header text-center">
                    <a href="#" class="h1"><b>PC </b>Taller</a>
                </div>
                <div class="card-body">
                    <p class="login-box-msg">Rellene el campo requerido</p>
                    <form id="quickForm" action="/users/pass/{{id}}" method="POST">
                        <div class="input-group form-group mb-3">
                            <input type="password" name="newPassword" placeholder="Nueva contraseña para usuario"
                                class="form-control" autofocus>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block"><i
                                        class="nav-icon fas fa-sync"></i> Actualizar Contraseña</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="alert alert-warning">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <i class="icon fas fa-exclamation-triangle"></i>
                Se va a cambiar la contraseña para <strong>{{userEditPass.names}} {{userEditPass.lastnames}}</strong>
                con nombre de usuario <strong>{{userEditPass.username}}</strong>
            </div>
        </div>
    </div>
