<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="sticky-top mb-3">
                    <div class="card card-primary card-outline">
                        {{#with userView}}
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle"
                                    src="/uploads/profile/users/{{image}}">
                            </div>
                            <h3 class="profile-username text-center">{{names}} {{lastnames}}</h3>
                            <p class="text-muted text-center">{{categoryText}}</p>
                            <div class="text-muted">
                                <hr>
                                <strong><i class="fas fa-columns mr-1"></i> Identificación: </strong>{{identification}}
                                <hr>
                                <strong><i class="fas fa-map mr-1"></i> Dirección: </strong>{{address}}
                                <hr>
                                <strong><i class="fas fa-phone mr-1"></i> Contacto: </strong>{{contact}}
                                <hr>
                                <strong><i class="fas fa-envelope mr-1"></i> Correo electrónico: </strong>{{email}}
                                <hr>
                                <strong><i class="fas fa-user mr-1"></i> Nombre de Usuario: </strong>{{username}}
                                <hr>
                                <strong><i class="fas fa-circle mr-1"></i> Estado: </strong>{{activeText}}
                            </div>
                            {{/with}}
                        </div>
                    </div>
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Acciones</h3>
                        </div>
                        <div class="text-muted card-body">
                            <a class="text-muted" href="/users/edit/{{userView.id}}">
                                <i class="fas fa-pencil-alt mr-1"></i>
                                <strong>Modificar usuario</strong>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Balance de reparaciones,
                                    {{repairsUserViewTotal.totalRepairs}} en
                                    total</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    {{#with repairsUserViewCount}}
                                    <div class="col-lg col-6">
                                        <strong>
                                            Pendiente:
                                        </strong>{{pendiente}}
                                    </div>
                                    <div class="col-lg col-6">
                                        <strong>
                                            En reparación:
                                        </strong>{{proceso}}
                                    </div>
                                    <div class="col-lg col-6">
                                        <strong>
                                            Culminada:
                                        </strong>{{terminada}}
                                    </div>
                                    <div class="col-lg col-6">
                                        <strong>
                                            En taller:
                                        </strong>{{taller}}
                                    </div>
                                    <div class="col-lg col-6">
                                        <strong>
                                            Entregada a cliente:
                                        </strong>{{entregada}}
                                    </div>
                                    {{/with}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Balance general</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    {{#with balancesUser}}
                                    <div class="col-lg col-6">
                                        <strong>
                                            Costo Total:
                                        </strong>$ {{cost}}
                                    </div>
                                    <div class="col-lg col-6">
                                        <strong>
                                            Pago Total:
                                        </strong>$ {{paid}}
                                    </div>
                                    <div class="col-lg col-6">
                                        <strong>
                                            Pendiente Total:
                                        </strong>$ {{pending}}
                                    </div>
                                    {{/with}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Reparaciones</h3>
                            </div>
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="general">
                                        <table id="example1" class="table table-bordered table-striped projects">
                                            <thead>
                                                <tr>
                                                    <th>Apellidos Cliente</th>
                                                    <th>Nombres Cliente</th>
                                                    <th>Información del Cliente</th>
                                                    <th>Información de Reparación</th>
                                                    <th>.</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each repairsUserViewDB}}
                                                <tr>
                                                    <td>{{lastnamesCustomer}}</td>
                                                    <td>{{namesCustomer}}</td>
                                                    <td>
                                                        <small><i class="text-muted fas fa-columns"></i></small>
                                                        {{identificationCustomer}}
                                                        <br />
                                                        <small><i class="text-muted fas fa-phone"></i></small>
                                                        {{contactCustomer}}
                                                        <br />
                                                        <small><i class="text-muted fas fa-envelope"></i></small>
                                                        {{emailCustomer}}
                                                        <br />
                                                        <small><i class="text-muted fas fa-map"></i></small>
                                                        {{addressCustomer}}
                                                    </td>
                                                    <td>
                                                        <small><i class="text-muted fas fa-laptop"></i></small>
                                                        {{statusText}}
                                                        <br />
                                                        <small><i class="text-muted fas fa-user"></i></small> Ingresado
                                                        por:
                                                        {{namesRegisteredUser}}
                                                        {{lastnamesRegisteredUser}}
                                                    </td>
                                                    <td class="project-actions text-center">
                                                        <a class="btn btn-primary btn-sm" href="/repairs/view/{{id}}">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        {{#if categoryUserLogin }}
                                                        <a class="btn btn-danger btn-sm" href="/repairs/delete/{{id}}">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                        {{/if}}
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                            <tfoot>
                                                <th>Apellidos Cliente</th>
                                                <th>Nombres Cliente</th>
                                                <th>Información del Cliente</th>
                                                <th>Información de Reparación</th>
                                                <th>.</th>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <div class="tab-pane" id="costs">
                                        <form id="quickForm" action="/repairs/view/{{repair.id}}/addcost" method="POST">
                                            <div class="row">
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label>Motivo</label>
                                                        <input type="text" name="reasonCost" class="form-control"
                                                            placeholder="Ingrese el motivo">
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label>Observación</label>
                                                        <input type="text" name="observationCost" class="form-control"
                                                            placeholder="Ingrese la observación">
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label>Valor</label>
                                                        <div class="input-group">
                                                            <input type="number" step="0.01" name="valueCost"
                                                                class="form-control" autofocus placeholder="0.00">
                                                            <div class="input-group-prepend">
                                                                <button class="btn btn-primary"><i
                                                                        class="nav-icon fas fa-plus"></i>
                                                                    Añadir</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <br><br>
                                            <div class="row">
                                                <div class="col-12 table-responsive">
                                                    <table class="table table-striped">
                                                        <thead>
                                                            <tr>
                                                                <th>Fecha de ingreso</th>
                                                                <th>Motivo</th>
                                                                <th>Observación</th>
                                                                <th>Ingresado por:</th>
                                                                <th class="text-right">Valor</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {{#each costsRepairDB}}
                                                            <tr>
                                                                <td>{{joinedCostRepair}}</td>
                                                                <td>{{reasonCostRepair}}</td>
                                                                <td>{{observationCostRepair}}</td>
                                                                <td>{{namesRegisteredUserCostRepair}}
                                                                    {{lastnamesRegisteredUserCostRepair}}</td>
                                                                <td class="text-right">$ {{valueCostRepair}}</td>
                                                            </tr>
                                                            {{/each}}
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>